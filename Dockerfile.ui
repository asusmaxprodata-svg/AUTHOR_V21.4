# syntax=docker/dockerfile:1.6
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1     PYTHONUNBUFFERED=1     PIP_NO_CACHE_DIR=1     TZ=Asia/Jakarta

RUN apt-get update && apt-get install -y --no-install-recommends     build-essential curl ca-certificates tzdata     && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8501

HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=5   CMD python -c "import os; assert os.path.exists('dashboard/app.py'); print('ok')" || exit 1

CMD ["streamlit", "run", "dashboard/app.py", "--server.port=8501", "--server.headless=true", "--browser.gatherUsageStats=false"]
