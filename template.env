# ===========================================
# KANG_BOT ENVIRONMENT CONFIGURATION
# ===========================================

# Exchange Configuration
EXCHANGE=bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true

# Binance Configuration (Optional)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_USER_ID=your_telegram_user_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# WhatsApp Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number_here

# System Configuration
TZ=Asia/Jakarta
PYTHONPATH=/app
STREAMLIT_PASSWORD=your_dashboard_password_here

# Docker Configuration
AUTO_RESTART=true
AUTO_RESTART_SERVICES=bot,ui,ws
COMPOSE_FILES=docker-compose.yml
RESTART_CMD=systemctl restart kang_bot.service

# Maintenance Configuration
AUTO_MAINT_CRON=0 8 * * MON

# ===========================================
# TELEGRAM CONFIGURATION
# ===========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ADMIN_USER_ID=your_admin_user_id_here
TELEGRAM_REAL_TRADE_PIN=your_pin_here

# ===========================================
# BYBIT CONFIGURATION
# ===========================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true

# ===========================================
# BINANCE CONFIGURATION (Optional)
# ===========================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_MINI=gpt-4o-mini

# ===========================================
# TRADING CONFIGURATION
# ===========================================
ENABLE_TRADING=false
DEFAULT_SYMBOL=BTCUSDT
SYMBOL=BTCUSDT
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# ===========================================
# STREAMLIT CONFIGURATION
# ===========================================
STREAMLIT_PASSWORD=your_streamlit_password_here
PORT=8501

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# TWILIO CONFIGURATION (Optional)
# ===========================================
TWILIO_SID=your_twilio_sid_here
TWILIO_TOKEN=your_twilio_token_here

# ===========================================
# AUTO MAINTENANCE (Optional)
# ===========================================
AUTO_MAINT_CRON=0 2 * * *
AUTO_RESTART=false
AUTO_RESTART_SERVICES=bot,ui
RESTART_CMD=docker-compose restart

# ===========================================
# DOCKER COMPOSE (Optional)
# ===========================================
COMPOSE_FILES=docker-compose.yml
